<br><h1 align = "center">Create New Category</h1></br>

<%= render 'shared/errors', obj:@category %>


<%= form_for(@category, :html=>{class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group row">
    <div class="control-label col-sm-1 offset-sm-1">
      <%=f.label :name%>
    </div>
    <div class="col-sm-8">
      <%=f.text_field :name, class: "form-control", placeholder: "Category name", autofocus: true %>
    </div>
  </div>
  <div class="form-group row">
    <div class="offset-sm-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg'%>
    </div>
  </div>
  <% end %>
    <div class="offset-sm-4 col-sm-4">
    [<%=link_to "Cancel request and return to article listing", articles_path%>]
  </div>
</div>
