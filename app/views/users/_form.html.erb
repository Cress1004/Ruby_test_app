<%= render 'shared/errors', obj:@user %>
<div class='row'>
  <div class='col-md-12'>
    <%= form_for(@user, :html=>{class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group row">
      <div class="col-sm-1"></div>
      <div class="control-label col-sm-1">
        <%=f.label :username%>
      </div>
      <div class="col-sm-8">
        <%=f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-1"></div>
      <div class="control-label col-sm-1">
        <%=f.label :email%>
      </div>
      <div class="col-sm-8">
        <%=f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-1"></div>
      <div class="control-label col-sm-1">
        <%=f.label :password%>
      </div>
      <div class="col-sm-8">
        <%=f.password_field :password, class: "form-control", placeholder: "Enter password"%>
      </div>
    </div>
    <div class="form-group row">
      <div class="offset-sm-2 col-sm-10">
        <%= f.submit(@user.new_record? ? "Signup" : "Update account", class: 'btn btn-primary btn-lg')%>
      </div>
    </div>
    <% end %>
    <div class="form-group row">
      <div class="col-sm-4"></div>
      <div class="col-sm-4">
      [<%=link_to "Cancel request and return to article listing", articles_path%>]
      </div>
    </div>
  </div>
</div>
